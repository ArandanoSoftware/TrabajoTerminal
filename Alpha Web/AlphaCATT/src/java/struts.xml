<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
  <package name="default" extends="struts-default">
  </package>
  <!--Requiere de 3 paramentros el paquere
      name, namespace, extends
      name: Nombre del paquete que representa
      namespace: Define el espacio en el que es valida la acciÃ³n-->
  <package name="StrutsControllers" namespace="/" extends="struts-default">
      <!--Parametros:
          Name: La forma en que es invocada desde la url
          Class: La clase a la que pertenece-->
      <action name="home" class="StrutsControllers.HomeController">
        <result name="success" type="redirect">/views/general/home.jsp</result>
      </action>

      <!-- Redirect Actions -->
      <!-- Generales-->
      <action name="home">
        <result type="redirect">
        <param name="location">/views/general/home.jsp</param>
        <param name="parse">false</param>
      </result>
      </action>
      <action name="calendar">
        <result type="redirect">/views/general/calendar.jsp</result>
      </action>
      <!-- Forms-  Registros -->
      <action name="regProf">
        <result type="redirect">/views/forms/regProf.jsp</result>
      </action>
      <action name="regTT">
        <result type="redirect">/views/forms/regTT.jsp</result>
      </action>
      <action name="regSalas">
        <result type="redirect">/views/forms/regSalas.jsp</result>
      </action>
  </package>



</struts>
